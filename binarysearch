#include <stdio.h>
void binarysearch();
int main(void)
{
   int size,first,last,middle,search;
   printf("Enter the number of elements:");
   scanf("%d",&size);
   int arr[size];
   printf("Enter elements in sorted order:");
   for (int i = 0; i < size; i++)
      scanf("%d",&arr[i]);
   printf("Enter element to be searched:");
   scanf("%d", &search);
 
   first = 0;
   last = size - 1;
   middle = (first+last)/2;

   binarysearch(arr,first,last,middle,search);

   return 0;
}
 void binarysearch(int array[],int f,int l,int m,int s){
   while (f <= l) {
	 if (array[m] == s) {
         printf("Element %d found at location %d", s, m+1);
         break;}
      if (array[m] < s)
         f = m + 1;    
      else
         l = m - 1;
 
      m = (f + l)/2;
   }
   if (f > l)
      printf("Element Not found!");  
}


