#include <stdio.h>

int rotationCount(int arr[],int size)

{
    int low=0,high=size-1;
 
   while(low<=high)
   
 {
   if(arr[low]<=arr[high])
 
       return low;
   
     int mid=(low+high)/2;
  
     int next=(mid+1)%size,prev=(mid-1+size)%size;

        if(arr[mid]<=next && arr[mid]<=prev)
    
          return mid;
  
        else if(arr[mid]<=arr[high])
  
           high=mid-1;
    
        else if(arr[mid]>=arr[low])
  
          low=mid+1;
   
 }
   
 return -1;

}
int main()

{
    int arr[]={6,7,8,1,2,3,4,5};
 
    int count=rotationCount(arr,8);
 
    printf("%d",count);
  
   return 0;

}
